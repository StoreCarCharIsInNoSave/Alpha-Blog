<div class="container">

  <%= form_with(model: @category, local: true)  do |f| %>
    <div class="form-handler w-50 mx-auto shadow p-3 mb-5 bg-info rounded">
      <%= render 'Shared/errors', obj: @category %>
      <div class="form-group row mb-1">
        <%= f.label :name, class: 'col-sm-3 col-form-label text-white' %>
        <div class="col-sm-9">
          <%= f.text_field :name, class: 'form-control text-muted', placeholder: 'Enter the category name' %>
        </div>
      </div>


      <%= f.submit(@category.new_record? ? "Create category" : "Update category", class: 'btn btn-success')%>
    </div>
  <% end %>

</div>
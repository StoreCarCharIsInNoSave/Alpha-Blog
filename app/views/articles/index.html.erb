<h1>Articles listing page</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>description</th>
      <th colspan="3">action</th>
    </tr>
  </thead>



 

<tbody>
  <% @articles.each do |article| %>
  <tr>
    <td><%=article.id%></td>
    <td><%= article.title %></td>
    <td><%= article.description %></td> 
    <td><%=link_to 'Show', article_path(article)%></td>
    <td><%=link_to 'Edit', edit_article_path(article)%></td>
    <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are u shure?"}%></td>
  </tr>
  <% end %>
</tbody>

</table>
<p><%=link_to "New", new_article_path%></p>